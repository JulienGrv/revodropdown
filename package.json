  "author": "revolist",
  "keywords": [
    "revo-grid",
    "revolist",
    "datagrid",
    "revoGrid",
    "stenciljs",
    "reactive",
    "virtualgrid",
    "virtual vue grid",
    "react datagrid",
    "editable",
    "excel",
    "webcomponent",
    "autocomplete",
    "dropdown",
    "jsdropdown",
    "dropdownlist"
  ],
  "scripts": {
