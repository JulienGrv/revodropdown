{
  "name": "@revolist/revo-dropdown",
  "version": "1.1.0",
  "description": "Minimalistic dropdown with keyboard support and search",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/revo-dropdown/revo-dropdown.js",
  "files": [
    "dist/",
    "loader/",
    "framework/"
  ],
  "author": "revolist",
  "homepage": "https://github.com/revolist/revodropdown#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revolist/revodropdown.git"
  },
  "bugs": {
    "url": "https://github.com/revolist/revodropdown/issues"
  },
  "keywords": [
    "revo-grid",
    "revolist",
    "datagrid",
    "revoGrid",
    "stenciljs",
    "reactive",
    "virtualgrid",
    "virtual vue grid",
    "react datagrid",
    "editable",
    "excel",
    "webcomponent",
    "autocomplete",
    "dropdown",
    "jsdropdown",
    "dropdownlist"
  ],
  "scripts": {
    "pretty-quick": "pretty-quick",
    "build": "rm -rf ./framework && stencil build --docs && npm run compile-framework --type=vue",
    "compile-framework": "cp tsconfig.json ./framework/$npm_config_type/ && tsc -p ./framework/$npm_config_type --skipLibCheck",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "deploy": "gh-pages -d ./www"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty-quick"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@stencil/angular-output-target": "0.0.5",
    "@stencil/core": "^2.0.1",
    "@stencil/react-output-target": "0.0.9",
    "@stencil/sass": "^1.3.2",
    "@stencil/svelte-output-target": "0.0.3",
    "@stencil/vue-output-target": "^0.2.5",
    "husky": "^5.0.0-beta.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "svelte": "^3.31.2",
    "typescript": "^3.9.7",
    "vue": "^3.0.5"
  }
}
